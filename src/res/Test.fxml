<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UICtrl_Test">

    <!-- Top section for the title -->
    <top>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Modern UI Example" styleClass="title-label"/>
            <Button fx:id="ExitButton" text="Exit" onAction="#onExitButtonPressed" styleClass="exit-button"/>
        </HBox>
    </top>

    <!-- Left sidebar -->
    <left>
        <VBox spacing="10">
            <Button text="Home" styleClass="sidebar-button"/>
            <Button text="Profile" styleClass="sidebar-button"/>
            <Button text="Settings" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- Center content -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Welcome to the Modern UI Example" styleClass="content-label"/>
            <Button fx:id="MainButton" text="Click Me" onAction="#onMainButtonPressed" styleClass="main-button"/>
        </VBox>
    </center>

</BorderPane>
